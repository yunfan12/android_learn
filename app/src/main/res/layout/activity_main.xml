            <RelativeLayout
                android:id="@+id/ShoppingCartRelativeLayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center" >
                <RadioButton
                    android:id="@+id/ShoppingCartRadioButton"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/forty_five"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:layout_centerHorizontal="true"
                    android:drawableTop="@drawable/shopping_cart"
                    android:text="@string/shopping_cart"
                    android:textColor="@color/homepage_select_color"
                    android:textSize="@dimen/eleven" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="@dimen/fifteen"
                    android:layout_height="@dimen/fifteen"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/allgood_bottom_nav_person3x"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/two"
                    android:layout_marginBottom="@dimen/two"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/six"
                    android:visibility="gone"
                    android:textSize="@dimen/ten" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/MyShoppingRelativeLayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center" >

                <RadioButton
                    android:id="@+id/MyShoppingRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/forty_five"
                    android:button="@null"
                    android:paddingTop="4dp"
                    android:gravity="center"
                    android:drawableTop="@drawable/my_shopping_select"
                    android:text="@string/my_shopping"
                    android:textColor="@color/homepage_select_color"
                    android:textSize="@dimen/eleven" />

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/MainLinearLayout"
            android:layout_alignParentLeft="true"
            android:background="@drawable/horizontal_xian" />
</RelativeLayout>
