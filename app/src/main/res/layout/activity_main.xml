<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.wdys.android_learn.cusview.IndexViewPager
        android:id="@+id/MainViewPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentLeft="true" >

    </com.wdys.android_learn.cusview.IndexViewPager>
        <LinearLayout
            android:id="@+id/MainLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/fifty"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/HomepageRelativeLayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center" >

                <RadioButton
                    android:id="@+id/HomepageRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/forty_five"
                    android:button="@null"
                    android:checked="true"
                    android:drawableTop="@drawable/homepage_select"
                    android:text="@string/homepage"
                    android:paddingTop="4dp"
                    android:gravity="center"
                    android:textColor="@color/homepage_select_color"
                    android:textSize="@dimen/eleven" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/AllCommodityRelativeLayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center" >

                <RadioButton
                    android:id="@+id/AllCommodityRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/forty_five"
                    android:button="@null"
                    android:paddingTop="4dp"
                    android:gravity="center"
                    android:drawableTop="@drawable/all_commodity"
                    android:text="@string/all_commodity"
                    android:textColor="@color/homepage_select_color"
                    android:textSize="@dimen/eleven" />
            </RelativeLayout>

